@{
    ViewData["Title"] = "Saç Stili Uygulama";
}

<div class="container">
    <h1>Saç Stili Uygulama</h1>
    <form method="post" enctype="multipart/form-data" asp-controller="AI" asp-action="ApplyHairStyle">
        <div class="mb-3">
            <label for="imageFile" class="form-label">Görsel Yükle</label>
            <input type="file" name="imageFile" id="imageFile" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="hairStyle" class="form-label">Saç Stili Seç</label>
            <select name="hairStyle" id="hairStyle" class="form-select" required>
                <option value="short">Kısa</option>
                <option value="long">Uzun</option>
                <option value="curly">Kıvırcık</option>
                <option value="straight">Düz</option>
            </select>
        </div>
        <button type="submit" class="btn btn-success">Uygula</button>
    </form>
</div>
