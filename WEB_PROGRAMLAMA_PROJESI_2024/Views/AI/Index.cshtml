@{
    ViewData["Title"] = "Saç Stili Uygula";
}

<div class="container">
    <h1>Saç Stili Uygula</h1>
    <form method="post" enctype="multipart/form-data" asp-controller="AI" asp-action="ApplyHairStyle">
        <div class="mb-3">
            <label for="imageFile" class="form-label">Görsel Yükle</label>
            <input type="file" name="imageFile" id="imageFile" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="hairStyle" class="form-label">Saç Stili Seçin</label>
            <select name="hairStyle" id="hairStyle" class="form-control" required>
                <option value="" disabled selected>Saç stili seçiniz</option>
                <option value="short_hair">Kısa Saç</option>
                <option value="long_hair">Uzun Saç</option>
                <option value="curly_hair">Kıvırcık Saç</option>
                <option value="straight_hair">Düz Saç</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Stil Uygula</button>
    </form>
</div>
