@{
    ViewData["Title"] = "Stil Transferi";
}

<div class="container">
    <h1>Stil Transferi</h1>
    <form method="post" enctype="multipart/form-data" asp-controller="AI" asp-action="ApplyStyle">
        <div class="mb-3">
            <label for="contentImage" class="form-label">İçerik Görseli Yükle</label>
            <input type="file" name="contentImage" id="contentImage" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="styleSelection" class="form-label">Stil Seçimi</label>
            <select name="selectedStyle" id="styleSelection" class="form-control" required>
                <option value="" disabled selected>Stil seçiniz</option>
                <option value="van_gogh">Van Gogh</option>
                <option value="picasso">Picasso</option>
                <option value="monet">Monet</option>
                <option value="abstract_1">Abstract 1</option>
                <option value="abstract_2">Abstract 2</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success">Stil Uygula</button>
    </form>
</div>
