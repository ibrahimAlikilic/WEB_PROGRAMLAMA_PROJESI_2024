
@{
    ViewData["Title"] = "IslemEkleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model Islem
<form asp-controller="Home" asp-action="IslemEkleme" method="post">
    <div class="form-group text-white">
        <label asp-for="IslemAdi">Islem Adi:</label>
        <input type="text" asp-for="IslemAdi" class="form-control" />
        <span asp-validation-for="IslemAdi" class="text-danger"></span>
    </div>
  


    <div class="form-group text-white">
        <label asp-for="Sure">Sure:</label>
        <input type="number" asp-for="Sure" class="form-control" />
        <span asp-validation-for="Sure" class="text-danger"></span>
    </div>


    <div class="form-group text-white">
        <label asp-for="Ucret">Ucret:</label>
        <input type="number" asp-for="Ucret" class="form-control" />
        <span asp-validation-for="Ucret" class="text-danger"></span>
    </div>

    <div class="form-group text-white">
        <label asp-for="SalonId">SALON:</label>
        <select asp-for="SalonId" class="form-control" asp-items="ViewBag.SalonList"></select>
        <span asp-validation-for="SalonId" class="text-danger"></span>
    </div>

    <div class="form-group pt-3">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>
